FROM alpine:3.13.2

RUN apk add gcc
RUN apk add musl-dev

ARG MESSAGE_ID

RUN adduser -D execbot

WORKDIR /usr/src/app

COPY ./playground/$MESSAGE_ID.c ./main.c

RUN gcc -g -Wall -lm main.c -o main

RUN chown -R execbot:execbot ./
USER execbot

CMD [ "gcc", "-g", "-Wall", "-lm", "main.c", "-o", "main" ]
CMD [ "./main" ]